page {
  background-color: #f1f1f1;
}

.profile-header {
  background-image: linear-gradient(360deg, #129e9e, #46bc87); 
   /* background-image: radial-gradient(circle, #324252, #27ae76, #2980b9, #e74c3c, #8e44ad); */
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.profile-header:after{
  content: ' ';
  width: 1000rpx;
  height: 1000rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-20%,41%);
  border-radius: 45%;
  background-color: rgba(255,255,255, .1);
  animation: round2 20s linear infinite;
}
.profile-header:before{
  content: ' ';
  width: 1000rpx;
  height: 1000rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-80%,41%);
  border-radius: 45%;
  background-color: rgba(255, 255, 255, 0.1);
  animation: round1 20s linear infinite;
}

@keyframes round1{
  to{
    transform: translate(-82%,40%)  rotate(-360deg);
  }
}
@keyframes round2{
  to{
    transform: translate(-18%,40%)  rotate(360deg);
  }
}


.avatar-url {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}

.nickname {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
}

/* 导航 */

.nav {
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: block;
}

.nav-item {
  padding-right: 90rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.img {
  display: inline-block;
  margin-right: 10rpx;
  width: 1.6em;
  height: 1.6em;
  vertical-align: middle;
  max-width: 100%;
}

.text {
  color: #808080;
}

.content .iconfont {
  font-weight: 600;
  margin-right: 20rpx;
}
.icon-ziyuanldpi-copy-copy{
  color: #46bc87;
}
.icon-indexfull{
  color: #e41ac2;
}
.icon-erweima{
  color: #e47c1a;
}

.content .icon-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
