.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  transition: top .6s;
  -moz-transition: top .6s;	/* Firefox 4 */
  -webkit-transition: top .6s;	/* Safari 和 Chrome */
  -o-transition: top .6s;	/* Opera */
}
.container-onFocus{
  top: -80rpx;
}
.userInfo-container {
  position: absolute;
  top: 5rpx;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 5rpx 20rpx;
  border-bottom: 1px #f7eeee solid;
 
}

.userInfo-container .avatarUrl{
width: 70rpx;
height: auto;
border-radius: 50%;

}
.userInfo-container  .name{
  margin-left: 10rpx;
  color: #46bc87;
  font-size: 32rpx;
}


.content {
  position: relative;
  top: 100rpx;
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  margin-bottom: -1rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.words {
  flex: 1;
  text-align: right;
  color: #8e8e8e;
  font-size: 28rpx;
  padding-right: 30rpx;
}
.words-max-num{
  color: #46bc87;
}

.send-btn {
  width: 120rpx !important;
  padding: 10rpx 25rpx;
  background: #46bc87;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}

/* 图片样式 */

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  position: absolute;
  top: 80rpx;
  width: 227rpx;
  height: 227rpx;
  margin-right: 11.5rpx;
  margin-bottom: 11.5rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  text-align: center;

}
.selectphoto {
  border: 2rpx dashed #cbd1d7;
  
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}



.icon-indexfull {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}
