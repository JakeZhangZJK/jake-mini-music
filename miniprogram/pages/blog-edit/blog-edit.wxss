.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
}
.userInfo-container {
  position: absolute;
  top: 5rpx;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 5rpx 20rpx;
  border-bottom: 1px #f7eeee solid;
}
.userInfo-container .avatarUrl{
width: 70rpx;
height: auto;
border-radius: 50%;

}
.userInfo-container  .name{
  margin-left: 10rpx;
  color: #46bc87;
  font-size: 32rpx;
}


.content {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 360rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.words-num {
  flex: 2;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send-btn {
  width: 100rpx !important;
  padding: 10rpx 25rpx;
  background: #46bc87;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

/* 图片样式 */

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  position: absolute;
  top: 300rpx;
  left: 0;
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-align: center;
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}

.icon-indexfull {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}
