.ctrl {
  display: flex;
  align-items: center;
  background: #fff;
  height: 100%;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, 0.8);
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;  
}

.ctrl-item .icon {
  margin-right: 12rpx;
  font-size: 33rpx;
}

.ctrl-item text {
  color: rgba(40, 47, 60, 0.75);
  font-size: 32rpx;
}

.comment-content {
  width: 560rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
}

.send {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 120rpx !important;
  padding: 10rpx 25rpx;
  background: #46bc87;
  color: #fff;
  font-size: 28rpx;
}

.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  height: 100%;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: normal;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}
